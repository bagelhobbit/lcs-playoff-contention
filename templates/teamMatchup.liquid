<!doctype html>
<html>
<head>
    <title>LCS Split Matchups</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" >

    <link rel="shortcut icon" type="image/png" href="/favicon.png"/>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src="scripts/index.js"></script>
</head>
<body>
    <nav class="navbar is-primary">
        <div class="navbar-item">
            <h2 class="title has-text-white is-2">LCS Split Matchups</h2>
        </div>
    </nav>
    <section class="section">
        <div>
            <nav class="breadcrumb is-medium">
                <ul>
                    <li class=""><a href="/" style="cursor: pointer;">Home</a></li>
                    <li class="is-active"><a>Head to Head</a></li>
                    <li class="is-active"><a>{{model.Team}}</a></li>
                </ul>
            </nav>
            <div class="container">
                <div class="content has-text-centered">
                    <h2 class="title is-2">LCS Split Head to Head Matchups</h2>
                </div>
            </div>
            <div class="container">
                <div class="content has-text-centered">
                    <h2 class="title is-2">{{model.Team}} vs.</h2>
                </div>
            </div>
            
            <div class="tile has-background-white-ter is-parent">
                {% for matchup in model.Matchups %}
                <div class="tile is-child">
                    <h4 class="title is-4">{{matchup.Team.Code}}</h4>
                    {% if matchup.Result == "Win" %}
                    <h6 class="title has-text-success is-6">Won</h6>
                    {% elsif matchup.Result == "Tie" %}
                    <h6 class="title has-text-info is-6">Tied</h6>
                    {% else %}
                    <h6 class="title has-text-danger is-6">Lost</h6>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</body>
</html>
